{
  "name": "cuaderno-digital-backend",
  "version": "1.0.0",
  "description": "API para gestionar el cuaderno digital escolar",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "seed": "node src/scripts/seed.js",
    "create-admin": "node src/scripts/createAdmin.js",
    "lint": "eslint .",
    "format": "prettier -w .",
